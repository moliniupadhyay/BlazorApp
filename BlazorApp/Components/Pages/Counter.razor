@page "/counter/"
@page "/counter2"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<div class="mt-3">
<input @oninput="OnInput">
<p>@text</p>

<div style="background-color: lightblue" @onmouseover="MouseOver" @onmouseout="MouseOut"> @divText
</div>
</div>

@code {
    private int currentCount = 0;
    String text ="";
    String divText="Mouse out";

    private void IncrementCount(MouseEventArgs e) => currentCount++;
    private void OnInput(ChangeEventArgs e) => text = (string)e.Value!;
    private void MouseOver(MouseEventArgs e) => divText = "Mouse Over";
    private void MouseOut(MouseEventArgs e) => divText = "Mouse Outt";
}


